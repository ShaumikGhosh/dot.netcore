@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Create";
}

<h1>Create Role</h1>

<form asp-action="Create" asp-controller="Role">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label">Role Name</label>
        <input asp-for="Name" class="form-control" id="inputPassword" placeholder="Enter role">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
</form>